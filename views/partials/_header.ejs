<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
      <% if (username) { %>
        <div style="margin-left: auto; margin-right: 0">Logged in as: <%= username %></div>
        <div style="margin-left: 20px; margin-right: 0">
          <form action="/logout" method="POST">
            <button type="submit" class="btn btn-outline-dark">Logout</button>
          </form>
        </div>
      <% } else{ %>
        <div style="margin-left: auto; margin-right: 0">
          <form class="form-inline" action="/login" method="POST">  <!-- EDIT form -->
            <div class="form-group mb-2">
              <input
              class="form-control"
              type="text"
              name="username"
              placeholder="username"
              style="width: 200px"
              />
              <button type="submit" class="btn btn-outline-dark" style="margin-left: 10px">Login</button>
            </div>
          </form>
        </div>
        <% } %>
    </div>
  </nav>
</header>